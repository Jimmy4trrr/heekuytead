-- üîÜ Kuyraisus UI System üîÜ
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "Kuyraisus üîÜ | Auto Farm & Hit",
    LoadingTitle = "Kuyraisus System",
    LoadingSubtitle = "By ‡∏´‡∏ô‡∏π‡∏Ç‡∏≠‡∏á‡∏ô‡∏≤‡∏¢‡∏ó‡πà‡∏≤‡∏ô ‚ù§Ô∏è",
})

local Tab = Window:CreateTab("Auto Farm", 4483362458)

-------------------------------------------------------
-- ‚úÖ ‡∏î‡∏∂‡∏á‡∏£‡∏≤‡∏¢‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏≠‡∏ô
local enemiesFolder = workspace.Ignore.Characters.NPCs.EnemyNPCs
local MobNames = {}

for _, mob in ipairs(enemiesFolder:GetChildren()) do
    if not table.find(MobNames, mob.Name) then
        table.insert(MobNames, mob.Name)
    end
end

-------------------------------------------------------
-- ‚úÖ ‡∏ï‡∏±‡∏ß‡πÅ‡∏õ‡∏£
local SelectedMob = nil
local AutoFarm = false
local AutoHit = false

Tab:CreateDropdown({
    Name = "‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏≠‡∏ô",
    Options = MobNames,
    CurrentOption = "",
    Callback = function(v)
        SelectedMob = v
    end,
})

-------------------------------------------------------
-- ‚úÖ ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏ï‡∏µ‡∏°‡∏≠‡∏ô
local function HitMob()
    local args = {
        [1] = "RequestAttack",
        [2] = { Type = "Hit" }
    }
    game:GetService("ReplicatedStorage").Remotes.Controversial.Combat:FireServer(unpack(args))
end

-------------------------------------------------------
-- ‚úÖ ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô Auto Farm (‡∏ß‡∏≤‡∏£‡πå‡∏õ‡πÑ‡∏õ‡∏´‡∏•‡∏±‡∏á‡∏´‡∏±‡∏ß‡∏°‡∏≠‡∏ô)
local function AutoFarmMob()
    if not SelectedMob then return end

    local player = game.Players.LocalPlayer
    local char = player.Character or player.CharacterAdded:Wait()
    local root = char:WaitForChild("HumanoidRootPart")

    for _, mob in ipairs(enemiesFolder:GetChildren()) do
        if mob.Name == SelectedMob and mob:FindFirstChild("HumanoidRootPart") then
            local mobRoot = mob.HumanoidRootPart
            local behindHead = mobRoot.CFrame * CFrame.new(0, 3, 2)

            -- ‡∏ß‡∏≤‡∏£‡πå‡∏õ‡∏ó‡∏±‡∏ô‡∏ó‡∏µ
            root.CFrame = behindHead
            task.wait(0.1)
        end
    end
end

-------------------------------------------------------
-- ‚úÖ UI Toggle Auto Farm
Tab:CreateToggle({
    Name = "Auto Farm (‡∏ß‡∏≤‡∏£‡πå‡∏õ‡πÑ‡∏õ‡∏´‡∏•‡∏±‡∏á‡∏´‡∏±‡∏ß‡∏°‡∏≠‡∏ô)",
    CurrentValue = false,
    Callback = function(state)
        AutoFarm = state
        while AutoFarm do
            AutoFarmMob()
        end
    end,
})

-------------------------------------------------------
-- ‚úÖ UI Toggle Auto Hit
Tab:CreateToggle({
    Name = "Auto Hit (‡∏ï‡∏µ‡∏°‡∏≠‡∏ô‡∏ó‡∏∏‡∏Å 0.1s)",
    CurrentValue = false,
    Callback = function(state)
        AutoHit = state
        while AutoHit do
            HitMob()
            task.wait(0.1)
        end
    end,
})
